#定义 root category 的属性 
log4cpp.rootCategory=ERROR,console

#定义 console 属性 
log4cpp.appender.console=ConsoleAppender
log4cpp.appender.console.layout=PatternLayout
log4cpp.appender.console.layout.ConversionPattern=%d [%p] - %m%n

#定义 hmilog category 的属性 
log4cpp.category.hmilog=INFO,hmilog

log4cpp.additivity.hmilog=false

#定义 hmilog appender 的属性 
log4cpp.appender.hmilog=FileAppender
log4cpp.appender.hmilog.fileName=hmi.log
log4cpp.appender.hmilog.layout=PatternLayout
log4cpp.appender.hmilog.layout.ConversionPattern=%d [%5t] [%-5p] - %m%n 

